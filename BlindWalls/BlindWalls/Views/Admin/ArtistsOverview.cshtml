@model IEnumerable<Domain.Entities.Artist>

@{
	ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.ArtistName)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.ArtistID)
		</th>
		
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.ArtistName)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.ArtistID)
			</td>
			<td>
				@Html.ActionLink("Lijst van muren van deze artiest", "MuralsList", new { searchParameter = item.ArtistID, searchStrategy = "id"})
			</td>
		</tr>
	}

</table>
